<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#4bbde7">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="562dp"
        android:orientation="vertical"
        android:padding="10dp"
        android:fillViewport="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <!-- I will swap the textColor and BG
            BackUp textColor="#8f8f8f"
            Background:"#fffff"

            and background other :"#4bbde7" -->


            <TextView
            android:id="@+id/textView"
            android:layout_width="187dp"
            android:layout_height="50dp"
           android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Item ID"
            android:textColor="#006064"
                android:textStyle="bold" />

            <EditText
                android:layout_width="320dp"
                android:layout_height="43dp"
                android:id="@+id/itemIDInput"
                android:background="#ffffff" />

            <TextView
            android:id="@+id/textView2"
            android:layout_width="187dp"
            android:layout_height="50dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Item Name"
                android:textColor="#006064"
                android:paddingTop="15dp"
                android:password="false"
                android:textStyle="bold" />

            <EditText
                android:layout_width="320dp"
                android:layout_height="43dp"
                android:id="@+id/itemNameInput"
                android:background="#ffffff" />



            <TextView
                android:id="@+id/textView4"
                android:layout_width="187dp"
                android:layout_height="50dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Comment"
                android:textColor="#006064"
                android:paddingTop="15dp"
                android:password="false"
                android:textStyle="bold" />
            <EditText
                android:layout_width="320dp"
                android:layout_height="43dp"
                android:id="@+id/itemCommentInput"
                android:background="#ffffff" />


            <TextView
                android:id="@+id/textView3"
                android:layout_width="187dp"
                android:layout_height="50dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Item Quantity"
                android:textColor="#006064"
                android:paddingTop="15dp"
                android:password="false"
                android:textStyle="bold" />

            <NumberPicker
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:id="@+id/itemQTInput"
                android:orientation="vertical"
                android:background="#4bbde7"
                android:layout_gravity="center_horizontal" />
            <Button
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="Save"
                android:id="@+id/saveButton"
                android:layout_gravity="center_horizontal"
                android:paddingTop="10dp"
                android:clickable="true"
                android:layout_marginTop="20dp"
                android:background="#ffffff"
                android:textColor="#4bbce6"
                android:textStyle="bold|italic"
                android:textSize="24sp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
